    "@scalar/hono-api-reference": "^0.9.24",
    "cron": "^4.3.4",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6",
    "http-status-codes": "^2.3.0",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "@types/pg": "^8.15.6",
